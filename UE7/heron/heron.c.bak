#include <stdio.h>

double heron(double z, int n)
{
	double w = z/2.0;
	for(int i=0;i<n;i++)
	{
		w=(w+z/w)/2.0;
	}
	return w;
}

int main()
{
	double wert;
	printf("Geben Sie einen Wert ein: ");
	scanf("%lf",&wert);
	printf("Die Wurzel von %lf ist %lf.\n",wert,heron(wert,20));
	return 0;
}
